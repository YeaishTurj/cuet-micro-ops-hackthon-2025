FROM node:24-alpine

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

EXPOSE 3000

# Use npm run dev which runs: DOWNLOAD_DELAY_MIN_MS=5000 DOWNLOAD_DELAY_MAX_MS=15000 node --experimental-transform-types --watch src/index.ts
# Note: --env-file removed because Docker Compose provides environment variables
CMD ["node", "--experimental-transform-types", "--watch", "src/index.ts"]
